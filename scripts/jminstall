#!/bin/bash
set -e

. "$(dirname "${0}")/pzenv"

if ! [ -d "${PZSERVER}" ]; then
	echo No installed pzserver found
	exit
fi

TMP=$(mktemp)
wget -q -O "${TMP}" "${JAVAMODSURL}"
unzip -o -qq -d "${PZSERVER}" "${TMP}"
rm -f "${TMP}"

"${PZSERVER}/jre64/bin/java" -jar "${PZSERVER}/java/javamods.jar"

echo OK
