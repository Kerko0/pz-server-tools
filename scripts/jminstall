#!/bin/bash
set -e

. "$(dirname "${0}")/pzenv"

if ! [ -d "${PZSERVER}" ]; then
	echo No installed pzserver found
	exit
fi

VERSION=0.0.1
JAVAMODSHOME="${HOME}/javamods"
CLONEURL="https://github.com/quarantin/javamods/"

rm -rf "${JAVAMODSHOME}"
git clone --quiet --depth 1 -c advice.detachedHead=false --branch "${VERSION}" "${CLONEURL}" "${JAVAMODSHOME}"

mkdir -p "${JAVAMODSDIR}"
cp "${JAVAMODSHOME}/config.json" "${JAVAMODSDIR}"

echo OK
