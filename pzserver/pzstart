#!/bin/bash

. "$(dirname "${0}")/pzenv"

check_is_pzserver_user

check_not_running

check_first_time

detach flock -n "${PZSERVERLOCK}" "$(dirname "${0}")/pzstartloop" ${SERVERNAMEOPTION} ${ADMINUSEROPTION} ${ADMINPASSWDOPTION} ${@} &

sleep 0.5

if [ -z "$(jobs -r)" ]; then
	echo pzserver already running

else
	echo OK
fi
